@model Keycloak.WebClient.ViewModels.Home.HomeViewModel

@{
    ViewData["Title"] = "Keycloak";
}

<div class="container">
	<div class="row" style="background: #212121; border: 1px solid #333333; border-top: 0; padding-top: 20px; padding-bottom: 20px; margin-bottom: 50px;">
		<div class="col-10">
			<h5>Me</h5>
			<span style="display: block;">@Model.Me.Username</span>
			<span style="display: block;">@Model.Me.FullName</span>
			<span style="display: block;"><i>@Model.Me.EmailAddress</i></span>
		</div>
		<div class="col-2 w-100">
			@using(Html.BeginForm("Logout", "Home"))
			{
				<button class="btn btn-danger btn-sm w-100" type="submit">Logout</button>
			}
		</div>
	</div>
	
	<div class="row" style="margin-bottom: 20px;">
		<h5>Clients</h5>
		<table class="table table-dark table-bordered table-hover">
			<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Id</th>
				<th scope="col">Client Id</th>
				<th scope="col">Name</th>
			</tr>
			</thead>

			<tbody>
			@{ int clientNo = 1;}
			@foreach (var client in Model.Clients)
			{
				<tr>
					<th scope="row">@clientNo</th>
					<td>@client.Id</td>
					<td>@client.ClientId</td>
					<td>@client.Name</td>
				</tr>

				clientNo++;
			}
			</tbody>
		</table>
	</div>

	<div class="row" style="margin-bottom: 20px;">
		<h5>Users</h5>
		<table class="table table-dark table-bordered table-hover">
			<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Id</th>
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Username</th>
				<th scope="col">Email</th>
			</tr>
			</thead>

			<tbody>
			@{ int userNo = 1;}
			@foreach (var user in Model.Users)
			{
				<tr>
					<th scope="row">@userNo</th>
					<td>@user.Id</td>
					<td>@user.FirstName</td>
					<td>@user.LastName</td>
					<td>@user.Username</td>
					<td>@user.EmailAddress</td>
				</tr>

				userNo++;
			}
			</tbody>
		</table>
	</div>
</div>